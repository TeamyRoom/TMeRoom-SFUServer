doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Noom for teacher
        main
            div#welcome
                form
                    input(placeholder="room name", required, type="text")
                    button Enter room
            div#call
                div#myStream
                    video#myFace(autoplay,playsinline, width="400", heigth="400")
                    button#mute mute
                    button#camera Turn camera off
                    select#cameras
                        option(value="device")
            div#test
                div#testStream
                    video#testFace(autoplay,playsinline, width="400", heigth="400")
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app_teacher.js")
        script(src="https://cdn.jsdelivr.net/npm/mediasoup-client")
